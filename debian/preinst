#!/bin/bash

# Doc: http://wiki.debian.org/MaintainerScripts

#DEBHELPER#

# Get the latest 1.2.X oversip Gem (but minor than 1.3.0).
#   http://www.oversip.net/documentation/versions_and_compatibility/
#   Doc: http://rubygems.rubyforge.org/rubygems-update/Gem/Version.html
#
OVERSIP_GEM_VERSION="~>1.2.0"

set -e

install_gem() {
  echo "uninstalling (previous) 'oversip' Ruby Gem(s)..."
  gem1.9.1 uninstall oversip -a -x
  echo "installing 'oversip' Ruby Gem (version $OVERSIP_GEM_VERSION)..."
  gem1.9.1 install oversip --no-rdoc --no-ri -v $OVERSIP_GEM_VERSION
}

case "$1" in

  install)
    # Add a Debian system user/group called "oversip".
    adduser --quiet --system --group --disabled-password \
            --shell /bin/false --gecos "OverSIP" \
            --home /var/run/oversip oversip || true

    # Install the Ruby gem.
    install_gem
    ;;

  upgrade)
    # Install the Ruby gem.
    install_gem
    ;;

esac

exit 0

#DEBHELPER#
